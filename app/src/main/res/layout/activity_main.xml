                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/tomato_boom" />

                <ImageView
                    android:id="@+id/RightCar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@drawable/tomato_fighter"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
//left and right screen
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ArrowL"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/left_button" />


        <Button
            android:id="@+id/slowSpeed"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickSlower"
            android:text="Slower" />

        <Button
            android:id="@+id/fastSpeed"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickFaster"
            android:text="Faster" />

        <ImageButton
            android:id="@+id/ArrowR"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/right_button" />

    </LinearLayout>



</LinearLayout>
