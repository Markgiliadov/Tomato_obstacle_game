                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tomato_obstacle"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/Boom11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/tomato_boom" />

                <ImageView
                    android:id="@+id/LeftCar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
