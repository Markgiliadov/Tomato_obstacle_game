                    android:src="@drawable/tomato_fighter"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        //centerCar
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:orientation="vertical">
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/centerObstacle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tomato_obstacle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/centerObstacle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:src="@drawable/tomato_obstacle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/centerObstacle3"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tomato_obstacle"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/centerObstacle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tomato_obstacle"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/Boom2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/tomato_boom" />

                <ImageView
                    android:id="@+id/CenterCar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/tomato_fighter" />
            </LinearLayout>
        </LinearLayout>
        //rightCar
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rightObstacle1"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tomato_obstacle"
                    android:visibility="invisible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rightObstacle2"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tomato_obstacle"
                    android:visibility="invisible" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="145dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rightObstacle3"
